<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:minHeight="55dp">

        <TextView
            android:id="@+id/zmanim_name"
            android:textSize="17sp"
            tools:text="London"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/zmanim_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="this is a description"
            android:layout_marginTop="5sp"
            android:layout_below="@id/zmanim_name"
            android:layout_toStartOf="@+id/zmanim_time"
            android:layout_toLeftOf="@+id/zmanim_time"
            android:gravity="start"
            android:textSize="17sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="#504A4B" />

        <TextView
            android:id="@+id/zmanim_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="15:45"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#ff1f75ff"
            android:textSize="17sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/zmanim_img"
            tools:text="13:65"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>